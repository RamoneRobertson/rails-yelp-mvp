<div class="grid m-3">
  <% @restaurants.each do |restaurant| %>
  <div class="card p-3" style="background-img: url('<%= restaurant.img_path%>')">
    <%= image_tag restaurant.img_path, alt: "text" %>
    <h5 class="mt-3"><%= restaurant.name %></h5>
    <p><%= restaurant.category.capitalize %></p>
    <p><%= restaurant.address %></p>
    <%= link_to "View", restaurant_path(restaurant) %>
  </div>
  <% end %>
</div>
